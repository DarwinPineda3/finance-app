generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
  USER
}

enum MovementType {
  INCOME
  EXPENSE
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String?
  role      Role     @default(ADMIN)
  movements Movement[]
  createdAt DateTime @default(now())
}

model Movement {
  id        String        @id @default(cuid())
  type      MovementType
  concept   String
  amount    Float
  date      DateTime
  user      User          @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime      @default(now())
}
